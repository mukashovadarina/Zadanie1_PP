<Window x:Class="WpfApp2.GradeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование оценки" Height="250" Width="300">
    <StackPanel Margin="10">
        <ComboBox x:Name="StudentComboBox" Margin="0,5"/>
        <TextBlock Text="Предмет"></TextBlock>
        <TextBox x:Name="SubjectTextBox" Margin="0,5"/>
        <TextBlock Text="Оценка"></TextBlock>
        <TextBox x:Name="ScoreTextBox" Margin="0,5"/>
        <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10"/>
    </StackPanel>
</Window>
